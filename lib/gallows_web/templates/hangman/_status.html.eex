<p>Turns left: <%= @tally.turns_left %></p>
<p>Word so far: <%= show_letters(@tally.letters)%></p>
<p>Used words: <%= show_letters(@tally.used) %></p>

<%= if game_over?(@tally) do %>
  <%= new_game_button(@conn) %>
<% else %>
  <%= form_for(@conn, hangman_path(@conn, :make_move), [as: :make_move, method: :put], fn(f) -> %>
    <%= text_input(f, :guess) %>
    <%= submit("Make next move") %>
  <% end) %>
<% end %>
